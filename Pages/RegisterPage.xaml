<Page x:Class="TaskManager.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация">
    <Grid>
        <Border Background="White"
                Width="400"
                VerticalAlignment="Center"
                CornerRadius="8"
                Padding="30"
                Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" 
                                ShadowDepth="2" 
                                Opacity="0.2"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Создайте аккаунт"
                          Style="{StaticResource PageTitleStyle}"
                          HorizontalAlignment="Center"/>

                <TextBlock Text="Имя пользователя"
                          Style="{StaticResource SubtitleStyle}"
                          Margin="0,20,0,5"/>
                <TextBox x:Name="UsernameTextBox"/>

                <TextBlock Text="Email"
                          Style="{StaticResource SubtitleStyle}"
                          Margin="0,15,0,5"/>
                <TextBox x:Name="EmailTextBox"/>

                <TextBlock Text="Пароль"
                          Style="{StaticResource SubtitleStyle}"
                          Margin="0,15,0,5"/>
                <PasswordBox x:Name="PasswordBox"
                           Padding="10,8"
                           Margin="5"/>

                <TextBlock Text="Повторите пароль"
                          Style="{StaticResource SubtitleStyle}"
                          Margin="0,15,0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox"
                           Padding="10,8"
                           Margin="5"/>

                <Button Content="Зарегестрироваться"
                        Click="RegisterButton_Click"
                        Margin="0,30,0,10" Height="30" Cursor="Hand"/>

                <Button Content="Назад"
                        Click="BackToLoginButton_Click"
                        Background="{StaticResource TextSecondaryColor}" Height="24" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>