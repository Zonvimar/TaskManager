<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Менеджер задач" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundColor}" Icon="/Resources/images/icon.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Background="{StaticResource PrimaryColor}"
                Padding="20,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Менеджер задач by zonvimar"
                          Foreground="White"
                          FontSize="22"
                          FontWeight="SemiBold"/>
                <TextBlock x:Name="PageTitleTextBlock" 
                          Text="{Binding Content.Title, ElementName=MainFrame}"
                          Foreground="White"
                          FontSize="22"
                          Margin="30,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <Frame x:Name="MainFrame" 
               Grid.Row="1" 
               NavigationUIVisibility="Hidden"
               Background="{StaticResource BackgroundColor}"/>
    </Grid>
</Window>